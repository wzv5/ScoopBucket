    "homepage": "https://filezilla-project.org/",
    "license": "GPL-2.0-or-later",
    "architecture": {
        "64bit": {
            "url": "https://download.filezilla-project.org/client/FileZilla_3.47.2_win64.zip",
            "hash": "sha512:3a229706b830ba0507c0888608ea5482a8ed220dd2625796f35ffc0f70d835cddf79b525124b9de05a6821ee8e6f30494f4e3e36b472bd2c67e7733921589994"
        },
        "32bit": {
            "url": "https://download.filezilla-project.org/client/FileZilla_3.47.2_win32.zip",
            "hash": "sha512:f0f2c88d662a5d9809d0203ddec936af7ec0998179ee8c8b64643f0f85515bb0a90c19fa69248da1eb3aa51353881acf16c2937195ec0fbfa271069f499c5600"
        }
    },
    "extract_dir": "FileZilla-3.47.2",
    "pre_install": [
        "if (-not (Test-Path \"$persist_dir\\fzdefaults.xml\")) {",
        "    $currentDir = current_dir $dir",
        "    $finalFile = '<?xml version=\"1.0\" encoding=\"UTF-8\" standalone=\"yes\" ?><FileZilla3><Settings>'",
        "    $finalFile += \"<Setting name=\"\"Config Location\"\">$currentDir\\data\\config</Setting>\"",
        "    $finalFile += \"<Setting name=\"\"Cache directory\"\">$currentDir\\data\\cache</Setting>\"",
        "    $finalFile += \"<Setting name=\"\"Disable update check\"\">1</Setting>\"",
        "    $finalFile += '</Settings></FileZilla3>'",
        "    Set-Content \"$dir\\fzdefaults.xml\" -Value $finalFile -Encoding Ascii",
        "}"
    ],
    "shortcuts": [
        [
            "filezilla.exe",
            "FileZilla"
        ]
    ],
    "persist": [
        "fzdefaults.xml",
        "data"
    ],
    "checkver": {
        "url": "https://filezilla-project.org/download.php?show_all=1",
        "re": "The latest stable version of FileZilla Client is ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.filezilla-project.org/client/FileZilla_$version_win64.zip"
            },
            "32bit": {
                "url": "https://download.filezilla-project.org/client/FileZilla_$version_win32.zip"
            }
        },
        "hash": {
            "url": "$baseurl/FileZilla_$version.sha512"
        },
        "extract_dir": "FileZilla-$version"
    }
}
