{
    "version": "5.21.905.1",
    "description": "Notepad like text editor based on the Scintilla source code",
    "homepage": "https://www.rizonesoft.com/downloads/notepad3/",
    "license": "BSD-3-Clause",
    "url": "https://github.com/rizonesoft/Notepad3/releases/download/RELEASE_5.21.905.1/Notepad3_5.21.905.1.zip",
    "hash": "51c3fc62f458281fee315cfbceba88f8f49f2fd7a60ddc0a034a16fbefd47fb1",
    "installer": {
        "script": [
            "if ($architecture -eq '64bit') {",
            "Expand-7zipArchive -Path \"$dir/Notepad3_${version}_x64.zip\"",
            "} elseif ($architecture -eq '32bit') {",
            "Expand-7zipArchive -Path \"$dir/Notepad3_${version}_x86.zip\"",
            "}",
            "Remove-Item \"$dir/Notepad3_*.zip\" -Force"
        ]
    },
    "bin": [
        "Notepad3.exe",
        "minipath.exe"
    ],
    "shortcuts": [
        [
            "Notepad3.exe",
            "Notepad3"
        ],
        [
            "minipath.exe",
            "minipath"
        ]
    ],
    "persist": [
        "Favorites",
        "minipath.ini",
        "Notepad3.ini"
    ],
    "checkver": {
        "github": "https://github.com/rizonesoft/Notepad3",
        "regex": "tag/RELEASE_([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/rizonesoft/Notepad3/releases/download/RELEASE_$version/Notepad3_$version.zip"
    }
}
