    "license": "MIT",
    "version": "2.9.1",
    "architecture": {
        "64bit": {
            "url": "https://github.com/tamlok/vnote/releases/download/v2.9.1/VNote_win_X64_portable_2.9.1.zip",
            "hash": "c96474fd1bbc2fddc2c56b786d7843f96c3a677b18af354ed5474b74991b08db"
        },
        "32bit": {
            "url": "https://github.com/tamlok/vnote/releases/download/v2.9.1/VNote_win_x86_portable_2.9.1.zip",
            "hash": "45a17d0b540e262551bca4132d722b7f19eb4b60361c44fe12c8858614322289"
        }
    },
    "extract_dir": "VNote",
    "persist": [
        "vnote.ini",
        "session.ini",
        "styles",
        "templates",
        "themes"
    ],
    "pre_install": [
        "if (!(Test-Path \"$persist_dir/vnote.ini\")) { Set-Content \"$dir/vnote.ini\" -Value $null }",
        "if (!(Test-Path \"$persist_dir/session.ini\")) { Set-Content \"$dir/session.ini\" -Value $null }"
    ],
    "uninstaller": {
        "script": [
            "$persist_dir = persistdir $app $global",
            "if ((Get-Item \"$dir/vnote.ini\").LinkType -ne 'HardLink') { cp \"$dir/vnote.ini\" \"$persist_dir/vnote.ini\" }",
            "if ((Get-Item \"$dir/session.ini\").LinkType -ne 'HardLink') { cp \"$dir/session.ini\" \"$persist_dir/session.ini\" }"
        ]
    },
    "checkver": {
        "github": "https://github.com/tamlok/vnote"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/tamlok/vnote/releases/download/v$version/VNote_win_X64_portable_$version.zip"
            },
            "32bit": {
                "url": "https://github.com/tamlok/vnote/releases/download/v$version/VNote_win_x86_portable_$version.zip"
            }
        }
    },
    "shortcuts": [
        [
            "VNote.exe",
            "VNote"
        ]
    ]
}
